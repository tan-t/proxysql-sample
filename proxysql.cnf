datadir="/var/lib/proxysql"

admin_variables=
{
  admin_credentials="root:root"
  mysql_ifaces="0.0.0.0:6032"
  refresh_interval=2000
}

mysql_variables=
{
  threads=4
  max_connections=2048
  default_query_delay=0
  default_query_timeout=36000000
  have_compress=true
  poll_timeout=2000
  interfaces="0.0.0.0:6033;/tmp/proxysql.sock"
  default_schema="information_schema"
  stacksize=1048576
  server_version="8.2.0"
  connect_timeout_server=10000
  monitor_history=60000
  monitor_connect_interval=200000
  monitor_ping_interval=200000
  ping_interval_server_msec=10000
  ping_timeout_server=200
  commands_stats=true
  sessions_sort=true
  monitor_username="root"
  monitor_password="root"
}


mysql_servers =
(
  { address="db-primary",   port=3306, hostgroup=0, max_connections=1000 },
  { address="db-secondary", port=3306, hostgroup=1, max_connections=1000 }
)

# MySQL へ Proxy 経由で接続するユーザ記載
mysql_users =
(
  { username = "root", password = "root",   default_hostgroup = 0, max_connections=1000, active = 1 },
  { username = "root", password = "root",   default_hostgroup = 1, max_connections=1000, active = 1 }
)

mysql_query_rules =
(
  {
    rule_id=1
    active=1
    schemaname="base"
    destination_hostgroup=0
    apply=1
  },
  {
    rule_id=2
    active=1
    schemaname="tenant1"
    destination_hostgroup=0
    apply=1
  },
  {
    rule_id=3
    active=1
    schemaname="tenant2"
    destination_hostgroup=1
    apply=1
  }
)
